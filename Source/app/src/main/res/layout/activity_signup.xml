<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wallper"
    tools:context="com.example.user.aselab4.SignupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign Up"
        android:id="@+id/lbl_Header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:textColor="#415ca0"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="User Name"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/text_Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/text_Username"
        android:id="@+id/text_Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_Password"
        android:hint="Password"
        android:layout_below="@id/text_Email"
        android:layout_marginTop="25dp"
        android:password="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_ConfirmPassword"
        android:hint="Confirm Password"
        android:layout_below="@id/text_Password"
        android:layout_marginTop="25dp"
        android:password="true"/>

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_ConfirmPassword"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_Signup"
        android:layout_marginTop="45dp"
        android:onClick="validateForm"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:background="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please enter valid details"
        android:id="@+id/lbl_Error"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:textColor="#e12c2c"
        android:singleLine="false"
        android:layout_below="@+id/button_Signup"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
